<resources>
    <!-- Base application theme. -->
    <!-- <style name="Theme.ScreenResolution" parent="Theme.MaterialComponents.DayNight.DarkActionBar"> -->
    <style name="Theme.ScreenResolution" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- <item name="android:statusBarColor">?attr/colorPrimaryVariant</item> -->
        <item name="android:statusBarColor">@color/main_cyan</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/main_cyan</item>
        <item name="android:color">@color/main_white</item>
    </style>

    <style name="Theme.ScreenResolution.Title">
        <item name="android:textSize">26sp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="Theme.ScreenResolution.Content">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
</resources>
